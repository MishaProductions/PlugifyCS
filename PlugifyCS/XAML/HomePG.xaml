<Page x:Class="PlugifyCS.XAML.HomePG"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlugifyCS.XAML"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             Style="{StaticResource UiPage}">
    <Viewbox VerticalAlignment="Top">
        <Grid VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Text="Welcome to Impulse CS!" FontSize="30" Grid.Row="0"></TextBlock>
            <TextBlock Text="View your groups at the top, and change settings by clicking on the gear by your profile picture" FontSize="20" Grid.Row="1"></TextBlock>
        </Grid>
    </Viewbox>
</Page>
